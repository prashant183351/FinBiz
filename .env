# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/finnbiz

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-too

# API
PORT=3001
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# S3/Minio (for file storage)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=finnbiz
S3_ACCESS_KEY=minio_access_key
S3_SECRET_KEY=minio_secret_key

# Email (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@finbiz.com

# AWS S3 (for backups - optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=finbiz-backups

# Security
BACKUP_ENCRYPTION_KEY=your-32-character-encryption-key-change-this
BACKUP_CODE_ENCRYPTION_KEY=your-32-character-backup-key-change-this

# E-invoice API (stubs for now)
EINVOICE_API_KEY=your-einvoice-api-key

# Payment Gateways
# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# PhonePe
PHONEPE_MERCHANT_ID=your-phonepe-merchant-id
PHONEPE_SALT_KEY=your-phonepe-salt-key
PHONEPE_SALT_INDEX=1
PHONEPE_WEBHOOK_SECRET=your-phonepe-webhook-secret

# Frontend URL (for payment callbacks)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Netlify (for production)
NETLIFY_BUILD=true
